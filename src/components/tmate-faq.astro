---
const { plan } = Astro.props;

// Remove old astro-i18next import
// import { t } from "i18next";

// Add new built-in i18n imports
import { getLangFromUrl, useTranslations } from "../i18n/utils";

// Get current language and create translation function
const safeUrl = Astro.url || new URL('/', Astro.site || 'http://localhost:4321');
const lang = getLangFromUrl(safeUrl);
const t = useTranslations(lang);


const faqs = [
	{
		title: "What is Tmate, and what does it do?",
		description: "Tmate is a free online TikTok video downloader that allows users to download TikTok videos without watermarks and convert them to MP3 files. It provides high-quality downloads in HD resolution and works on any device with a web browser.",
	},
	{
		title: "Is Tmate safe to use for downloading TikTok videos?",
		description: "Yes, Tmate is completely safe to use. It features SSL certification and WAF protection to secure users from malicious attacks. No login or personal information is required, ensuring a secure and private experience.",
	},
	{
		title: "How do I download a TikTok video without watermark using Tmate?",
		description: "Simply copy the TikTok video link from the app or website, visit https://ssstiktok.life/tmate-tiktok-downloader, paste the link into the URL box, click 'Download' and select your preferred quality (720p or 1080p). The video will be downloaded without watermarks.",
	},
	{
		title: "Can I download TikTok audio or convert videos to MP3 with Tmate?",
		description: "Yes, Tmate supports converting TikTok videos to MP3 format. After pasting the video link, the tool will process it and provide you with a 'Download MP3' option to save just the audio file.",
	},
	{
		title: "Do I need to install any software to use Tmate?",
		description: "No installation is required. Tmate is a web-based tool that works directly in your browser. However, you can also install it as a PWA (Progressive Web App) on your phone by clicking 'Add Tmate to Home Screen' for easier access.",
	},
	{
		title: "Is Tmate free, or are there hidden costs?",
		description: "Tmate is completely free with no hidden charges. You can download unlimited videos without any restrictions. The service may display ads to support operations, but this doesn't affect the downloading functionality.",
	},
	{
		title: "What devices are compatible with Tmate?",
		description: "Tmate works on all devices including PCs, Android phones, iPhones, tablets and iPads. For iOS devices, you need Safari browser with iOS 13 or higher, or you can use the Documents by Readdle app for older versions.",
	},
	{
		title: "Can I download videos from private TikTok accounts?",
		description: "No, Tmate cannot download videos from private TikTok accounts. The tool only works with publicly available TikTok content and respects privacy settings.",
	},
	{
		title: "Does Tmate support downloading TikTok photos and slideshows?",
		description: "Yes, Tmate supports downloading TikTok photos and image slideshows without watermarks. The process is the same as downloading videos - simply paste the content link and download.",
	},
	{
		title: "Are there any limits on how many videos I can download?",
		description: "No, there are no download limits on Tmate. You can download as many TikTok videos as you want for free. However, please respect the original creators' copyrights and intellectual property rights.",
	},
	{
		title: "Where are downloaded videos saved on my device?",
		description: "Downloaded videos are typically saved in the 'Downloads' folder on Android devices and PCs. For iOS devices with Safari, you can choose the download location. Tmate does not store any videos on its servers.",
	},
	{
		title: "What should I do if a video fails to download?",
		description: "Download failures can occur if the TikTok video has been deleted, is from a private account, or if TikTok is experiencing technical issues. Make sure you're using the correct TikTok video link and try again later if the problem persists.",
	},
];
---

<div class="mx-auto max-w-6xl px-6 py-12 sm:py-36 lg:px-8 dark:bg-stone-950">
	<div class="mx-auto divide-y divide-gray-900/10 dark:divide-gray-100/10">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">{t("faq.title_sec1")} <span class="text-indigo-600">Tmate</span> - {t("faq.title_sec2")}</h2>

		<dl class="mt-10 space-y-6 divide-y divide-gray-900/10 dark:divide-gray-100/10">
			{
				faqs.map((faq) => (
					<div class="pt-6" x-data="{ open: false }">
						<dt>
							<button
								type="button"
								class="flex w-full items-start justify-between text-left text-gray-900 dark:text-white"
								@click="open = !open"
								:x-bind:aria-expanded="open.toString()">
								<span class="text-base font-semibold leading-7">{faq.title}</span>
								<span class="ml-6 flex h-7 items-center">
									<svg
										class="h-6 w-6"
										fill="none"
										viewBox="0 0 24 24"
										stroke-width="1.5"
										stroke="currentColor"
										aria-hidden="true"
										x-show="!open">
										<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6"></path>
									</svg>
									<svg
										class="h-6 w-6"
										fill="none"
										viewBox="0 0 24 24"
										stroke-width="1.5"
										stroke="currentColor"
										aria-hidden="true"
										x-show="open">
										<path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6"></path>
									</svg>
								</span>
							</button>
						</dt>
						<dd
							x-transition:enter="transition ease-out duration-100"
							x-transition:enter-start="opacity-0 transform scale-90"
							x-transition:enter-end="opacity-100 transform scale-100"
							x-transition:leave="transition ease-in duration-100"
							x-transition:leave-start="opacity-100 transform scale-100"
							x-transition:leave-end="opacity-0 transform scale-90"
							class="mt-2 pr-12"
							id="faq-0"
							x-show="open">
							<span class="text-base leading-7 text-gray-600 dark:text-gray-100">
								<span set:html={faq.description}></span>
							</span>
						</dd>
					</div>
				))
			}
		</dl>
	</div>
</div>
