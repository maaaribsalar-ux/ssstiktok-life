---
const { plan } = Astro.props;

// Remove old astro-i18next import
// import { t } from "i18next";

// Add new built-in i18n imports
import { getLangFromUrl, useTranslations } from "../i18n/utils";

// Get current language and create translation function
const safeUrl = Astro.url || new URL('/', Astro.site || 'http://localhost:4321');
const lang = getLangFromUrl(safeUrl);
const t = useTranslations(lang);


const faqs = [
	{
		title: "What is ssstiktok.life?",
		description: "ssstiktok.life is a free online TikTok video downloader that allows you to save TikTok videos without watermarks in high-quality MP4 format or as MP3 audio files. No software installation or registration is required—just paste the video link and download instantly.",
	},
	{
		title: "How do I download a TikTok video without watermark using ssstiktok.life?",
		description: "1. Open the TikTok app or website and find the video you want to download.<br/>2. Tap the 'Share' button and select 'Copy Link.'<br/>3. Visit ssstiktok.life, paste the link into the input box at the top of the page.<br/>4. Click 'Download' and choose your preferred format (no watermark MP4, with watermark, or MP3). The file will save to your device automatically.",
	},
	{
		title: "Is ssstiktok.life free to use?",
		description: "Yes, ssstiktok.life is completely free with no hidden fees, subscriptions, or limits on the number of downloads. You can save as many videos as you like without any restrictions.",
	},
	{
		title: "Does ssstiktok.life require me to install any apps or extensions?",
		description: "No, there's no need to install anything. ssstiktok.life works directly in your web browser on any device, including smartphones (Android/iOS), tablets, PCs, and laptops. It's compatible with browsers like Chrome, Safari, Firefox, and Edge.",
	},
	{
		title: "Can I download TikTok videos in HD quality?",
		description: "Absolutely! ssstiktok.life preserves the original video quality from TikTok's servers, including HD, Full HD, or even 4K if available. We don't alter or compress the files, so you get the best possible resolution without watermarks.",
	},
	{
		title: "Why can't I download private or restricted TikTok videos?",
		description: "ssstiktok.life only supports downloading public videos. Private videos, deleted content, or restricted accounts cannot be processed due to TikTok's privacy settings. Ensure the video is publicly available for successful downloads.",
	},
	{
		title: "How do I download TikTok videos on my iPhone or iPad?",
		description: "For iOS 13+ devices, use Safari: Copy the TikTok link, paste it into ssstiktok.life, and download. For older iOS versions (12 or below), install the free 'Documents by Readdle' app, use its built-in browser to visit ssstiktok.life, and follow the same steps. Videos save to your Photos or Files app.",
	},
	{
		title: "Is it safe to use ssstiktok.life?",
		description: "Yes, ssstiktok.life is safe and secure. We don't require any personal information, login details, or account access. Videos are fetched directly from TikTok's servers and downloaded to your device—we don't store or host any content ourselves.",
	},
	{
		title: "Where are the downloaded videos saved on my device?",
		description: "Downloads go to your browser's default folder (e.g., 'Downloads' on Android/PC or Photos/Files on iOS). You can change this in your browser settings. If downloading MP3, it will save as an audio file playable in most media apps.",
	},
	{
		title: "What should I do if I encounter an error while downloading?",
		description: "Errors may occur if the link is incorrect, the video is private/deleted, or there's a temporary issue with TikTok. Double-check the link format (it should be a direct video URL), try again later, or clear your browser cache. If issues persist, contact our support for help.",
	},
];
---

<div class="mx-auto max-w-6xl px-6 py-6 sm:py-18 lg:px-8">
	<div class="mx-auto divide-y divide-gray-900/10">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900">{t("faq.title_sec1")} <span class="text-indigo-600">SssTiktok</span> - {t("faq.title_sec2")}</h2>

		<dl class="mt-10 space-y-6 divide-y divide-gray-900/10">
			{
				faqs.map((faq) => (
					<div class="pt-6" x-data="{ open: false }">
						<dt>
							<button
								type="button"
								class="flex w-full items-start justify-between text-left text-gray-900"
								@click="open = !open"
								:x-bind:aria-expanded="open.toString()">
								<span class="text-base font-semibold leading-7">{faq.title}</span>
								<span class="ml-6 flex h-7 items-center">
									<svg
										class="h-6 w-6"
										fill="none"
										viewBox="0 0 24 24"
										stroke-width="1.5"
										stroke="currentColor"
										aria-hidden="true"
										x-show="!open">
										<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6"></path>
									</svg>
									<svg
										class="h-6 w-6"
										fill="none"
										viewBox="0 0 24 24"
										stroke-width="1.5"
										stroke="currentColor"
										aria-hidden="true"
										x-show="open">
										<path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6"></path>
									</svg>
								</span>
							</button>
						</dt>
						<dd
							x-transition:enter="transition ease-out duration-100"
							x-transition:enter-start="opacity-0 transform scale-90"
							x-transition:enter-end="opacity-100 transform scale-100"
							x-transition:leave="transition ease-in duration-100"
							x-transition:leave-start="opacity-100 transform scale-100"
							x-transition:leave-end="opacity-0 transform scale-90"
							class="mt-2 pr-12"
							id="faq-0"
							x-show="open">
							<span class="text-base leading-7 text-gray-600">
								<span set:html={faq.description}></span>
							</span>
						</dd>
					</div>
				))
			}
		</dl>
	</div>
</div>
