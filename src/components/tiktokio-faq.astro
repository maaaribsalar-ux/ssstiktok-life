---
const { plan } = Astro.props;

// Remove old astro-i18next import
// import { t } from "i18next";

// Add new built-in i18n imports
import { getLangFromUrl, useTranslations } from "../i18n/utils";

// Get current language and create translation function
const safeUrl = Astro.url || new URL('/', Astro.site || 'http://localhost:4321');
const lang = getLangFromUrl(safeUrl);
const t = useTranslations(lang);


const faqs = [
	{
		title: "What is TikTokio, and what does it do?",
		description: "TikTokio is a free online tool that allows users to download TikTok videos without watermarks or convert them to MP3 files. It provides high-quality downloads and is accessible on various devices without requiring registration.",
	},
	{
		title: "Is TikTokio safe to use for downloading TikTok videos?",
		description: "Yes, TikTokio is 100% safe. It uses an active SSL certificate to protect user privacy and does not require login or personal information, ensuring a secure experience with no viruses.",
	},
	{
		title: "How can I download a TikTok video without a watermark using TikTokio?",
		description: "To download a TikTok video without a watermark, copy the video link from the TikTok app or website, paste it into the input box on above input section, click \'Download,\' and select the \'no watermark\' option.",
	},
	{
		title: "Can I download TikTok audio or MP3 files with TikTokio?",
		description: "Yes, TikTokio supports extracting audio from TikTok videos in MP3 format. After pasting the video link on the website, select the \'Download MP3\' option to save the audio.",
	},
	{
		title: "Do I need to install software to use TikTokio?",
		description: "No, TikTokio is a web-based tool that requires no additional software or extensions. Simply visit https://ssstiktok.life/tiktokio-tiktok-downloader-tiktok-video-download-without-watermark and paste the video link to start downloading.",
	},
	{
		title: "Is TikTokio free, or are there hidden costs?",
		description: "TikTokio is completely free to use with no hidden costs. The site may display ads to maintain operations, but these do not affect the downloading process.",
	},
	{
		title: "Can I use TikTokio on any device?",
		description: "Yes, TikTokio is compatible with a wide range of devices, including PCs, smartphones (Android and iOS), tablets and iPads as long as they have a web browser.",
	},
	{
		title: "Does TikTokio support downloading videos from private TikTok accounts?",
		description: "No, TikTokio can only download videos from public TikTok accounts. It does not have access to content from private accounts.",
	},
	{
		title: "Can I download TikTok photos or slideshows with TikTokio?",
		description: "Yes, TikTokio supports downloading TikTok photos and image slideshows without watermarks. Follow the same steps as for video downloads by pasting the content link on the website.",
	},
	{
		title: "Are there any limits to how many TikTok videos I can download with TikTokio?",
		description: "No, TikTokio imposes no limits on the number of videos you can download. You can save as many videos as you like, provided you respect the original creators' copyrights.",
	},
];
---

<div class="mx-auto max-w-6xl px-6 py-12 sm:py-36 lg:px-8 dark:bg-stone-950">
	<div class="mx-auto divide-y divide-gray-900/10 dark:divide-gray-100/10">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">{t("faq.title_sec1")} <span class="text-indigo-600">Tiktokio</span> - {t("faq.title_sec2")}</h2>

		<dl class="mt-10 space-y-6 divide-y divide-gray-900/10 dark:divide-gray-100/10">
			{
				faqs.map((faq) => (
					<div class="pt-6" x-data="{ open: false }">
						<dt>
							<button
								type="button"
								class="flex w-full items-start justify-between text-left text-gray-900 dark:text-white"
								@click="open = !open"
								:x-bind:aria-expanded="open.toString()">
								<span class="text-base font-semibold leading-7">{faq.title}</span>
								<span class="ml-6 flex h-7 items-center">
									<svg
										class="h-6 w-6"
										fill="none"
										viewBox="0 0 24 24"
										stroke-width="1.5"
										stroke="currentColor"
										aria-hidden="true"
										x-show="!open">
										<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m6-6H6"></path>
									</svg>
									<svg
										class="h-6 w-6"
										fill="none"
										viewBox="0 0 24 24"
										stroke-width="1.5"
										stroke="currentColor"
										aria-hidden="true"
										x-show="open">
										<path stroke-linecap="round" stroke-linejoin="round" d="M18 12H6"></path>
									</svg>
								</span>
							</button>
						</dt>
						<dd
							x-transition:enter="transition ease-out duration-100"
							x-transition:enter-start="opacity-0 transform scale-90"
							x-transition:enter-end="opacity-100 transform scale-100"
							x-transition:leave="transition ease-in duration-100"
							x-transition:leave-start="opacity-100 transform scale-100"
							x-transition:leave-end="opacity-0 transform scale-90"
							class="mt-2 pr-12"
							id="faq-0"
							x-show="open">
							<span class="text-base leading-7 text-gray-600 dark:text-gray-100">
								<span set:html={faq.description}></span>
							</span>
						</dd>
					</div>
				))
			}
		</dl>
	</div>
</div>
